<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Signup">
    <VerticalStackLayout>
        <Image Source="vertical.png" HeightRequest="300" Margin="0, 30, 0, 45"/>
        <Label 
            Text="" 
            x:Name="Error"
            TextColor="#4DCBED"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0, 0, 0, 5"
        />
        <Entry Placeholder="Choose your username" x:Name="usr" WidthRequest="1000" Margin="0, 0, 0, 15" FontFamily="UbuntuRegular" FontSize="18"/>
        <Entry Placeholder="Choose your password" x:Name="pas" WidthRequest="1000" FontFamily="UbuntuRegular" FontSize="18"/>

        <Button Text="Sign up" Clicked="goToMenu" WidthRequest="500" Margin="0, 50, 0, 15"/>

        <Button Text="Back" Clicked="goToMain" WidthRequest="500"/>
        
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Signup"
             Title="Signup">
    <VerticalStackLayout>
        <Label 
        Text="Signup Page"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <Button Text="Go back" Clicked="goToMain" />
        <Label 
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Entry Placeholder="Choose your username" x:Name="usr" />
        <Entry Placeholder="Choose your password" x:Name="pas"/>

        <Button Text="Sign up" Clicked="goToMenu" />
        <Label 
            Text="" 
            x:Name="Error"
            TextColor="DarkRed"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            />
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp1.Cart"
    Title="Cart">

    <VerticalStackLayout Padding="20">

        <Label Text="Items in your cart:" FontSize="20" />

        <CollectionView x:Name="CartList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Quantity}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Go back" Clicked="goToMenu" Margin="0, 0, 0, 40" BackgroundColor="Orange"/>
        <Button Text="Submit order" Clicked="goToConfirmation" BackgroundColor="Orange"/>

    </VerticalStackLayout>
</ContentPage>

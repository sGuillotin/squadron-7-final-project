<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp1.Cart">

    <VerticalStackLayout>
        <HorizontalStackLayout BackgroundColor="#7D062E">
            <Image Source="horizontal.png" HeightRequest="60" Margin="5"/>
        </HorizontalStackLayout>
        
        <Label Text="Items in your cart:" HorizontalOptions="Center" FontFamily="FacultyGlyphicRegular" FontSize="35" Margin="0, 30, 0, 0"/>

        <CollectionView x:Name="CartList" Margin="600, 20, 0, 20">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Quantity}" />
                        <Label Text="{Binding Price, StringFormat='${0}'}" />
                        <Button Text="+" Clicked="AddItem" />
                        <Button Text="-" Clicked="RemoveItem" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Go back" Clicked="goToMenu" WidthRequest="700" Margin="0, 0, 0, 15"/>
        <Button Text="Submit order" Clicked="goToConfirmation" WidthRequest="700"/>

    </VerticalStackLayout>
</ContentPage>


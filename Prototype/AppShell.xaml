<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Title="Sette.">

    <!-- Main Page -->
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Menu Page -->
    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate local:Menu}"
        Route="Menu" />

    <!-- Cart Page -->
    <ShellContent
        Title="Cart"
        ContentTemplate="{DataTemplate local:Cart}"
        Route="Cart" />

    <!-- Login Page -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Login}"
        Route="Login" />

    <!-- Signup Page -->
    <ShellContent
        Title="Signup"
        ContentTemplate="{DataTemplate local:Signup}"
        Route="Signup" />

    <!-- Orders Page (if used) -->
    <ShellContent
        Title="Orders"
        ContentTemplate="{DataTemplate local:Orders}"
        Route="Orders" />

    <!-- Confirmation Page -->
    <ShellContent
        Title="Confirmation"
        ContentTemplate="{DataTemplate local:Confirmation}"
        Route="Confirmation" />

</Shell>




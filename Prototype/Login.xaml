<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Login"
             Title="Login">
    <VerticalStackLayout>
        <Label 
            Text="Login Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Go back" Clicked="goToMain" Margin="0, 0, 0, 40" BackgroundColor="Orange"/>


        <Entry Placeholder="Type in your username" x:Name="usr" />
        <Entry Placeholder="Type in your password" x:Name="pas"/>



        <Button Text="Sign in" Clicked="goToMenu" BackgroundColor="Orange"/>
        <Label 
            Text="" 
            x:Name="Error"
            TextColor="DarkRed"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0, 0, 0, 40"/>





        <Label 
            Text="Or if you don't have an account..."
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />

        <Button Text="Go to signup" Clicked="goToSignup" BackgroundColor="Orange"/>

    </VerticalStackLayout>
</ContentPage>
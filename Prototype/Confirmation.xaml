<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Confirmation">
    <VerticalStackLayout>
        <Label 
            Text="Confirmation Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="20"
        />

        <Button Text="Order more?" Clicked="goToMenu" WidthRequest="700" Margin="0, 20, 0, 15"/>

        <Button Text="All Done?" Clicked="goToOrders" WidthRequest="700"/>
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Confirmation">
    <VerticalStackLayout>
        <HorizontalStackLayout BackgroundColor="#7D062E">
            <Image Source="horizontal.png" HeightRequest="60" Margin="5"/>
        </HorizontalStackLayout>
        
        <Label 
            Text="Confirmation Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="35"
            FontFamily="FacultyGlyphicRegular"
            Margin="0, 30, 0, 0"
        />

        <Button Text="Order more?" Clicked="goToMenu" WidthRequest="700" Margin="0, 20, 0, 15"/>

        <Button Text="All Done?" Clicked="goToOrders" WidthRequest="700"/>
    </VerticalStackLayout>
</ContentPage>